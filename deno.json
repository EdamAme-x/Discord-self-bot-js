{
    "tasks": {
        "dev": "deno run -A --watch main.ts"
    },
    "lint": {
        "rules": {
            "tags": ["recommended"],
            "exclude": [
                "no-unused-vars",
                "no-implicit-any",
                "no-explicit-any",
                "require-await",
                "ban-ts-comment"
            ]
        }
    },
    "fmt": {
        "options": {
            "useTabs": false,
            "lineWidth": 190,
            "indentWidth": 4,
            "singleQuote": true
        }
    }
}
